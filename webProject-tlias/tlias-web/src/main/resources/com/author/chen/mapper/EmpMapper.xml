<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.author.chen.mapper.EmpMapper">
    <update id="update">
        UPDATE emp e
        <set>
            <if test="username != null and username != ''">
                e.username = #{username},
            </if>
            <if test="password != null and password != ''">
                e.password = #{password},
            </if>
            <if test="phone != null and phone != ''">
                e.phone = #{phone},
            </if>
            <if test="name != null and name != ''">
                e.name = #{name},
            </if>
            <if test="gender != null">
                e.gender = #{gender},
            </if>
            <if test="image != null and image != ''">
                e.image = #{image},
            </if>
            <if test="job != null">
                e.job = #{job},
            </if>
            <if test="salary != null">
                e.salary = #{salary},
            </if>
            <if test="entryDate != null">
                e.entry_date = #{entryDate},
            </if>
            <if test="deptId != null">
                e.dept_id = #{deptId},
            </if>
            <if test="createTime != null">
                e.create_time = #{createTime},
            </if>
            e.update_time=#{updateTime},
        </set>
        WHERE e.id = #{id}
    </update>
    <delete id="delete">
        delete  from emp where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
              #{id}
        </foreach>
    </delete>
    <select id="list" resultType="com.author.chen.pojo.Emp">
        select e.id, e.username, e.password, e.name, e.gender, e.phone, e.job, e.salary, e.image,
               e.entry_date as entryDate, e.dept_id as deptId, e.create_time as createTime,e.update_time as updateTime,
               d.name as deptName
        from emp e
        left join dept d on e.dept_id = d.id
        <where>
            <if test="name !=null and name!='' ">
                e.name like concat('%' #{name} '%')
            </if>
            <if test="gender!=null">
                and gender = #{gender}
            </if>
            <if test="begin!=null and  end!=null">
                and e.entry_date between #{begin}
                and #{end}
            </if>
        </where>
        order by e.update_time desc
    </select>
